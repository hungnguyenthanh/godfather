<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f9f9f9"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_marginLeft="-7dp"
            android:id="@+id/boy"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:adjustViewBounds="true"
            android:src="@drawable/boy" />

        <ImageView
            android:id="@+id/girl"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="20dp"
            android:adjustViewBounds="true"
            android:src="@drawable/girl" />

        <RelativeLayout
            android:id="@+id/layoutSignup"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingTop="20dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal"
                android:text="@string/create_free_doop_account"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/btnSignupFacebook"
                style="@style/EditTextLogin"
                android:layout_width="wrap_content"
                android:layout_below="@+id/textView1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_login_fb_button"
                android:drawableLeft="@drawable/ic_fb"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="Sign Up with Facebook"
                android:textColor="@color/text_color_white" />

            <ImageView
                android:id="@+id/orLine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btnSignupFacebook"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:src="@drawable/or" />

            <LinearLayout
                android:id="@+id/layoutLoginGmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/orLine"
                android:layout_centerHorizontal="true"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/edtName"
                    style="@style/EditTextLogin"
                    android:hint="@string/name" />

                <EditText
                    android:id="@+id/edtEmail"
                    style="@style/EditTextLogin"
                    android:hint="@string/email" />

                <EditText
                    android:id="@+id/edtPassword"
                    style="@style/EditTextLogin"
                    android:hint="@string/password" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Minimum 6 characters"
                    android:textSize="9sp" />

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp">

                    <EditText
                        android:id="@+id/edtSelectCity"
                        style="@style/EditTextLogin"
                        android:layout_marginTop="0dp"
                        android:clickable="false"
                        android:focusable="false"
                        android:hint="@string/select_your_city" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|center_vertical"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/ic_spinner" />
                </FrameLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layoutLoginGmail"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="43dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:src="@drawable/btn_login_next" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/already_have_account"
                    android:textColor="@color/text_color"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/btnLoginNow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/login_now"
                    android:textColor="@color/text_color_green"
                    android:textSize="15sp"
                    android:textStyle="" />
            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/layoutLogin"
            android:gravity="center_horizontal"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/boy"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:text="@string/login_doop_account"
                android:textColor="@android:color/black"
                android:textSize="18sp" />


            <TextView
                android:id="@+id/btnLoginFacebook"
                style="@style/EditTextLogin"
                android:layout_width="177dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_login_fb_button"
                android:drawableLeft="@drawable/ic_fb"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textSize="13sp"
                android:text="@string/login_with_facebook"
                android:textColor="@color/text_color_white" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btnLoginFacebook"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:src="@drawable/or" />

            <TextView
                android:id="@+id/btnLoginGmail"
                style="@style/EditTextLogin"
                android:layout_width="177dp"
                android:layout_marginTop="20dp"
                android:textSize="13sp"
                android:background="@drawable/bg_login_email_button"
                android:drawableLeft="@drawable/ic_email"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="Login in with email"
                android:textColor="@color/text_color_white" />

            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/don_t_have_an_account"
                android:textColor="@color/text_color"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/btnSignupNow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/signup_now"
                android:textColor="@color/text_color_green"
                android:textSize="15sp"
                android:textStyle="" />

        </LinearLayout>


    </RelativeLayout>

</LinearLayout>